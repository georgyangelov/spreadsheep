%h1.center Register a sheep

%form#register-form.center-condensed{action: 'register', method: 'post'}
  .group.input-with-icon
    %i.fa.fa-user
    %input{type: 'text', name: 'full_name', placeholder: 'Full Name', required: true}
  .group.input-with-icon
    %i.fa.fa-at
    %input{type: 'email', name: 'email', placeholder: 'Email', required: true}
  .group.input-with-icon
    %i.fa.fa-lock
    %input#password{type: 'password', name: 'password', placeholder: 'Password', required: true}
  .group.input-with-icon
    %i.fa.fa-unlock-alt
    %input{type: 'password', name: 'password-repeat', placeholder: 'Repeat password', required: true}
  .group.center
    %button.btn.big{type: 'submit'} Register

:javascript
  $('#register-form').validate({
    rules: {
      'password-repeat': {
        equalTo: "#password"
      }
    }
  });
