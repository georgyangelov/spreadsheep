!!! 5
%html
  %head
    %title SpreadSheep Alpha - the alpha sheep

    %link{rel: 'stylesheet', href: '//cdnjs.cloudflare.com/ajax/libs/handsontable/0.12.5/handsontable.full.min.css'}
    %link{rel: 'stylesheet', href: '//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css'}

    != css :application
    != css :sheet_view

    %script{src: '//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'}
    %script{src: '//cdnjs.cloudflare.com/ajax/libs/pleasejs/0.2.0/Please.min.js'}
    %script{src: '//cdnjs.cloudflare.com/ajax/libs/react/0.12.2/react.js'}
    %script{src: '//cdnjs.cloudflare.com/ajax/libs/react/0.12.2/JSXTransformer.js'}

    / Handsontable Rule.js
    %script{src: '//cdnjs.cloudflare.com/ajax/libs/underscore.string/3.0.3/underscore.string.min.js'}
    %script{src: '//cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment.min.js'}
    %script{src: '//cdnjs.cloudflare.com/ajax/libs/numeral.js/1.5.3/numeral.min.js'}

    %script{src: '/scripts/react_components/user_list.jsx', type: 'text/jsx'}
    %script{src: '/scripts/react_components/color_picker.jsx', type: 'text/jsx'}
    %script{src: '/scripts/react_components/font_size_picker.jsx', type: 'text/jsx'}
    %script{src: '/scripts/react_components/alignment_picker.jsx', type: 'text/jsx'}

    != js :application
    != js :numeric
    != js :sheet_view

  %body.fullscreen
    %header
      %h1
        = @sheet.name
      #menu
        %a.btn{href: user_logged_in? ? "/directory/#{@sheet.directory.id}/#{@sheet.directory.slug}" : '/'} Back
      #bg-color-picker
      #fg-color-picker
      #font-size-picker
      #alignment-picker

      #user-list

    = yield

  %script{type: 'text/jsx'}
    :plain
      initialize_sheet();
